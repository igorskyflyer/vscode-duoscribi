{
    "name": "{{pkg}}",
    "publisher": "igordvlpr",
    "displayName": "{{project}}",
    "version": "{{version}}",
    "description": "{{desc}}",
    "engines": {
        "vscode": "^1.92.0"
    },
    "categories": ["{{cat}}"],
    "activationEvents": [],
    "main": "dist/extension.js",
    "extensionKind": ["ui"],
    "capabilities": {
        "virtualWorkspaces": {
            "supported": false
        },
        "untrustedWorkspaces": {
            "supported": false
        }
    },
    "icon": "assets/extension.png",
    "galleryBanner": {
        "color": "#5065E5",
        "theme": "dark"
    },
    "contributes": {
        "commands": [
            {
                "command": "ext.sayHello",
                "title": "Say Hello!"
            }
        ]
    },
    "scripts": {
        "base": "esbuild src/extension.mts --bundle --outfile=dist/extension.js --format=cjs --platform=node --external:vscode --target=node20",
        "debug": "npm run -S base -- --sourcemap",
        "make": "npm run -S base -- --minify",
        "vscode:prepublish": "npm run make",
        "pkg": "vsce package",
        "pub": "vsce publish"
    },
    "keywords": [
        "{{tags}}",
        "vscode",
        "extension",
        "igorskyflyer",
        "igor.dvlpr"
    ],
    "license": "MIT",
    "author": "Igor DimitrijeviÄ‡ <igor.dvlpr@gmail.com> (https://github.com/igorskyflyer)",
    "funding": "https://ko-fi.com/igorskyflyer",
    "sponsor": {
        "url": "https://ko-fi.com/igorskyflyer"
    },
    "pricing": "Free",
    "homepage": "https://github.com/igorskyflyer/{{repo}}",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/igorskyflyer/{{repo}}.git"
    },
    "bugs": {
        "url": "https://github.com/igorskyflyer/{{repo}}/issues"
    },
    "devDependencies": {
        "@types/vscode": "^1.92.0",
        "@biomejs/biome": "^1.8.3",
        "@igor.dvlpr/biome-config-igorskyflyer": "^1.0.3",
        "@types/node": "20.14.0",
        "typescript": "^5.5.4",
        "esbuild": "^0.23.0"
    }
}
